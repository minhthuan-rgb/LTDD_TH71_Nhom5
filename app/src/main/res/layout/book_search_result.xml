<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvBookSearch"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    cardView:cardCornerRadius="4dp"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBookSearch"
            android:scaleType="fitXY"
            android:layout_width="200dp"
            android:layout_height="180dp"/>

        <TextView
            android:id="@+id/txtTitleSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgBookSearch"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quando"
            android:gravity="center_horizontal|top"
            android:lineHeight="27sp"
            android:textAppearance="@style/single_book_title"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txtValueSearch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txtTitleSearch"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="left|center"
            android:lineHeight="32sp"
            android:textSize="20sp"
            android:textColor="#000"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/txtNewValueSearch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txtValueSearch"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="left|center"
            android:lineHeight="32sp"
            android:textSize="20sp"
            android:textColor="#CF1616"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/txtSaleSearch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txtTitleSearch"
            android:layout_alignRight="@id/imgBookSearch"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="left|center"
            android:lineHeight="32sp"
            android:textColor="#CA05EC"
            android:textSize="24sp"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>