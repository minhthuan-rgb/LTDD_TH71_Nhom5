<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:id="@+id/layoutContact"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@id/txtContact"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/textview"
            android:hint="Email"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnGetPW"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/txtContact"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button"
            android:textAppearance="@style/buttonText"
            android:lineHeight="40sp"
            android:text="Lấy lại mật khẩu"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#F2F2F2"
            android:fontFamily="@font/roboto_slab_bold"
            android:layout_below="@+id/btnGetPW"
            android:text="Vui lòng cung cấp Email hoặc số điện thoại để lấy lại mật khẩu"
            android:textSize="14sp"/>
    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layoutSended"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:background="@drawable/correct"
            android:layout_marginTop="70dp"
            android:layout_gravity="center|top"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="210dp"
            android:gravity="center"
            android:textColor="#009688"
            android:fontFamily="@font/roboto_slab_bold"
            android:layout_below="@+id/btnGetPW"
            android:text="Mật khẩu đã được gửi"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/txtContactSended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="260dp"
            android:gravity="center"
            android:textColor="#F2F2F2"
            android:fontFamily="@font/roboto_slab_bold"
            android:layout_below="@+id/btnGetPW"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/backGroundNavigation"
            android:text="Tiếp tục mua sắm"
            android:textAppearance="@style/buttonText"
            android:textSize="30sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>