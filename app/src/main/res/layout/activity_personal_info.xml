<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInfoActivity"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:drawableBottom="@drawable/thinbotline"
            android:text="Cá nhân"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ tên"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextHoTen_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nhập họ tên"
                android:inputType="textPersonName"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textColorHint="@color/gray_active_icon"
                android:drawableBottom="@drawable/thinbotline"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txtEmail_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textColorHint="@color/gray_active_icon"
                android:drawableBottom="@drawable/thinbotline"
                android:ems="10"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextSDT_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textColorHint="@color/gray_active_icon"
                android:drawableBottom="@drawable/thinbotline"
                android:ems="10"
                android:hint="Nhập số điện thoại"
                android:inputType="textPersonName"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextDiaChi_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textColorHint="@color/gray_active_icon"
                android:drawableBottom="@drawable/thinbotline"
                android:ems="10"
                android:hint="Nhập địa chỉ"
                android:inputType="textPersonName"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/checkBoxDoiMatKhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Đổi mật khẩu"
                android:textColor="@color/white"
                android:checked="false"
                android:button="@drawable/custom_checkbox_personal"
                android:textSize="25sp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearChangePW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewMKCu_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu cũ"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/editTextMatKhauCu_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:visibility="invisible"
                android:hint="Nhập mật khẩu cũ"
                android:drawableBottom="@drawable/thinbotline"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textColorHint="@color/gray_active_icon"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/textViewMKMoi_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu mới"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/editTextMatKhauMoi_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Nhập mật khẩu mới"
                android:textSize="25sp"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textColorHint="@color/gray_active_icon"
                android:drawableBottom="@drawable/thinbotline"/>

            <TextView
                android:id="@+id/textViewAuthMK_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xác nhận mật khẩu mới"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="invisible"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextAuthMKMoi_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:visibility="invisible"
                android:hint="Xác nhận mật khẩu mới"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textColorHint="@color/gray_active_icon"
                android:drawableBottom="@drawable/thinbotline"/>

            <Button
                android:id="@+id/btnLuu_Personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:textAppearance="@style/buttonText"
                android:textSize="25sp"
                android:text="Lưu thay đổi"
                android:layout_marginVertical="20dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>