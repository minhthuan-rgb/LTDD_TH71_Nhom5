<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Đăng ký"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="75sp"/>

        <EditText
            android:id="@+id/editTextHoTen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="Họ tên"
            android:textColor="@color/gray_active_icon"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:hint="Số điện thoại"
            android:textColor="@color/gray_active_icon"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/button"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="Email"
            android:textColor="@color/gray_active_icon"
            android:textSize="25sp"
            tools:ignore="TextFields" />

        <EditText
            android:id="@+id/editTextMatKhau"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/button"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="Mật khẩu"
            android:textColor="@color/gray_active_icon"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextDiaChi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/button"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:hint="Địa chỉ"
            android:textColor="@color/gray_active_icon"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4">

        <Button
            android:id="@+id/btnDangKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginHorizontal="100dp"
            android:text="Đăng ký"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAppearance="@style/buttonText" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Khi đăng ký\nlà bạn đã chấp nhận điều khoản sử dụng."
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="2dp"/>
    </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>