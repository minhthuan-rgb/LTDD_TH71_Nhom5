<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:id="@+id/layoutResetPW"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <EditText
                android:id="@id/txtNewPW"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="70dp"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/textview"
                android:hint="Mật khẩu mới"
                android:gravity="center"/>


            <EditText
                android:id="@id/txtAgain"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/textview"
                android:hint="Nhập lại mật khẩu mới"
                android:gravity="center"
                android:layout_below="@+id/txtNewPW"/>

            <Button
                android:id="@+id/btnSummit"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/txtAgain"
                android:layout_marginHorizontal="56dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/button"
                android:textAppearance="@style/buttonText"
                android:lineHeight="40sp"
                android:text="Lấy lại mật khẩu"
                android:textSize="30sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutFinish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:background="@drawable/correct"
            android:layout_marginTop="70dp"
            android:layout_gravity="center|top"/>

        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/button"
            android:text="Trở về trang đăng nhập"
            android:textAppearance="@style/buttonText"
            android:textSize="24sp"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center|top"
            android:background="@drawable/button"
            android:text="Trở về trang chủ"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</FrameLayout>