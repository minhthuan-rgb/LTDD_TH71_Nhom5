<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:fontFamily="@font/quando"
            android:gravity="center_horizontal|top"
            android:textAppearance="@style/single_book_title"
            android:lineHeight="27sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/imgBookSingle"
            android:layout_width="225dp"
            android:layout_height="353dp"
            android:layout_below="@+id/txtTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="92dp"
            android:layout_marginRight="92dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/txtValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgBookSingle"
            android:layout_alignStart="@+id/imgBookSingle"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal|top"
            android:lineHeight="32sp"
            android:textAppearance="@style/single_book_value"
            android:layout_alignLeft="@+id/imgBookSingle"
            android:layout_marginLeft="-50dp" />

        <TextView
            android:id="@+id/txtSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgBookSingle"
            android:layout_alignEnd="@+id/imgBookSingle"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="-50dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal|top"
            android:lineHeight="32sp"
            android:textAppearance="@style/single_book_value"
            android:layout_alignRight="@+id/imgBookSingle"
            android:layout_marginRight="-50dp" />

        <TextView
            android:id="@+id/dTitle"
            android:text="Mô tả chi tiết"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtValue"
            android:layout_alignStart="@+id/txtValue"
            android:layout_alignEnd="@+id/txtSale"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:textAppearance="@style/single_book_value"
            android:layout_alignLeft="@+id/txtValue"
            android:layout_alignRight="@+id/txtSale" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dTitle"
            android:layout_alignStart="@+id/txtValue"
            android:layout_alignEnd="@+id/txtSale"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:textAppearance="@style/single_book_value"
            android:textAlignment="center"
            android:layout_alignLeft="@+id/txtValue"
            android:layout_alignRight="@+id/txtSale"
            android:gravity="center_horizontal" />
        <Spinner
            android:id="@+id/spinner"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDescription"
            android:layout_alignStart="@+id/txtValue"
            android:layout_alignEnd="@+id/txtSale"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/spinner"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@+id/txtValue"
            android:layout_alignRight="@+id/txtSale" />

        <Button
            android:id="@+id/btnChoose"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/spinner"
            android:layout_alignStart="@+id/txtValue"
            android:layout_alignEnd="@+id/txtSale"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/background_navigation"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Chọn mua"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            android:layout_alignLeft="@+id/txtValue"
            android:layout_alignRight="@+id/txtSale" />
    </RelativeLayout>

</ScrollView>