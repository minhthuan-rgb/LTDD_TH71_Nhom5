<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_appName"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/ribeye"
            android:gravity="center_horizontal|top"
            android:text="@string/app_name"
            android:textAppearance="@style/app_name"
            app:lineHeight="88sp" />

        <EditText
            android:id="@+id/txtNameLogin"
            android:layout_width="246dp"
            android:layout_height="35dp"
            android:layout_below="@+id/txt_appName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="82dp"
            android:background="@color/white"
            android:gravity="center_horizontal|top|bottom"
            android:hint="Tên đăng nhập"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:layout_marginStart="83dp" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="246dp"
            android:layout_height="35dp"
            android:layout_below="@+id/txtNameLogin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="82dp"
            android:background="@color/white"
            android:gravity="center_horizontal|top|bottom"
            android:hint="Mật khẩu"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:layout_marginStart="83dp" />

        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txtPassword"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:fontFamily="@font/roboto_slab_light"
            android:gravity="top|bottom|right"
            android:text="@string/forgot_password"
            android:linksClickable="true"
            android:textAppearance="@style/forgot_password"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="119dp"
            android:layout_height="46dp"
            android:layout_below="@+id/txtForgotPassword"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp"
            android:background="@color/white"
            android:text="Đăng nhập" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="119dp"
            android:layout_height="46dp"
            android:layout_below="@+id/txtForgotPassword"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/btnSignIn"
            android:layout_toLeftOf="@+id/btnSignIn"
            android:background="@color/white"
            android:text="Đăng ký" />

    </RelativeLayout>

</ScrollView>