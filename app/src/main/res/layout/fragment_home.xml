<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <FrameLayout
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <ViewFlipper
                android:id="@+id/vfHome"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:flipInterval="5000"
                android:autoStart="false">

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </ViewFlipper>
        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewFlipper"
            android:layout_marginTop="20dp">


            <RelativeLayout
                android:id="@+id/relativeFlash"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/background_navigation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Flash Deal"
                    android:textAppearance="@style/home_panels" />

                <Button
                    android:id="@+id/btnMoreFlash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparency"
                    android:text="Xem thêm"
                    android:textSize="10sp" />
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFlash"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_below="@+id/relativeFlash"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:id="@+id/relativeDetective"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/relativeFlash"
                android:layout_marginTop="130dp"
                android:background="@drawable/background_navigation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Trinh thám"
                    android:textAppearance="@style/home_panels"/>

                <Button
                    android:id="@+id/btnMoreDetective"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparency"
                    android:text="Xem thêm"
                    android:textSize="10sp" />
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDetective"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_below="@+id/relativeDetective"
                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:id="@+id/relativeLove"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/relativeDetective"
                android:background="@drawable/background_navigation"
                android:layout_marginTop="130dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ngôn tình"
                    android:textAppearance="@style/home_panels" />
                <Button
                    android:id="@+id/btnMoreLove"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparency"
                    android:text="Xem thêm"
                    android:textSize="10sp" />
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerLove"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_below="@+id/relativeLove"
                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:id="@+id/relativeHorror"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/background_navigation"
                android:layout_below="@+id/relativeLove"
                android:layout_marginTop="130dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Kinh dị"
                    android:textAppearance="@style/home_panels"/>
                <Button
                    android:id="@+id/btnMoreHorror"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparency"
                    android:text="Xem thêm"
                    android:textSize="10sp" />
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerHorror"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_below="@+id/relativeHorror"
                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:id="@+id/relativeAdventure"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/background_navigation"
                android:layout_below="@+id/relativeHorror"
                android:layout_marginTop="130dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Khám phá"
                    android:textAppearance="@style/home_panels"/>
                <Button
                    android:id="@+id/btnMoreAdventure"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparency"
                    android:text="Xem thêm"
                    android:textSize="10sp" />
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAdventure"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_below="@+id/relativeAdventure"
            android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:id="@+id/relativeNovel"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/background_navigation"
                android:layout_below="@+id/relativeAdventure"
                android:layout_marginTop="130dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tiểu thuyết"
                    android:textAppearance="@style/home_panels"/>
                <Button
                    android:id="@+id/btnMoreNovel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparency"
                    android:text="Xem thêm"
                    android:textSize="10sp" />
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNovel"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_below="@+id/relativeNovel"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="87dp"/>


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>