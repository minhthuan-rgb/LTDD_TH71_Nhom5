<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <ViewFlipper
                android:id="@+id/vfHome"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:flipInterval="5000"
                android:autoStart="false">

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/vf_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </ViewFlipper>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewFlipper"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtFlashDeal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backGroundNavigation" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/txtFlashDeal"
                android:layout_marginTop="10dp"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/vf_1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/vf_2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/vf_3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/vf_4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/vf_5"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/vf_6"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/vf_7"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtDetective"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/backGroundNavigation"
                android:layout_below="@+id/txtFlashDeal"
                android:layout_marginTop="140dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/txtDetective"
                android:layout_marginTop="10dp"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtLove"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backGroundNavigation"
                android:layout_below="@+id/txtDetective"
                android:layout_marginTop="140dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/txtLove"
                android:layout_marginTop="10dp"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtHorror"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backGroundNavigation"
                android:layout_below="@+id/txtLove"
                android:layout_marginTop="140dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/txtHorror"
                android:layout_marginTop="10dp"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtAdventure"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backGroundNavigation"
                android:layout_below="@+id/txtHorror"
                android:layout_marginTop="140dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/txtAdventure"
                android:layout_marginTop="10dp"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtNovel"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/backGroundNavigation"
                android:layout_below="@+id/txtAdventure"
                android:layout_marginTop="140dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/txtNovel"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="100dp"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>