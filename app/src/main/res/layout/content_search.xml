<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/backgroundSearch">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/frameHotkey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/hotkey"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ khóa hot"
                android:layout_marginLeft="50dp"
                android:textAppearance="@style/home_panels"
                android:textColor="@color/white"
                android:layout_marginStart="50dp" />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rvHotKey"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="40dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameRecentQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameHotkey"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/recent"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm gần đây"
                android:layout_marginLeft="50dp"
                android:textAppearance="@style/home_panels"
                android:textColor="@color/white"
                android:layout_marginStart="50dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecentQuery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"/>
        </FrameLayout>
    </RelativeLayout>
</ScrollView>
    