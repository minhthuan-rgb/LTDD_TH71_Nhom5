<resources>

    <!-- Base application theme. -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="slogan">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#F2F2F2</item>
    </style>

    <style name="app_name">
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="forgot_password">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#E0E0E0</item>
    </style>
</resources>
